@model List<Contacts>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="text-center">Contact List</h1>
<div class="mb-2">
    <!--Links the to add page-->
    <a asp-controller="Contacts" asp-action="Add" class="btn btn-primary">Add New Contact</a>
</div>

<table class="table table-bordered table-striped">
    <!--table column names-->
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Note</th>
        </tr>
    </thead>
    <!--inputs data from database into the table-->
    <tbody>
        @foreach (var contacts in Model)
        {
            <tr>
                <td>@contacts.Name</td>
                <td>@contacts.PhoneNumber</td>
                <td>@contacts.Address</td>
                <td>@contacts.Note</td>
                <!--links to edit and delete pages-->
                <td>
                    <a asp-controller="Contacts" asp-action="Edit"
                       asp-route-id="@contacts.ContactsId"
                       asp-route-slug="@contacts.Slug" class="btn btn-primary mb-3">Edit</a>

                    <a asp-controller="Contacts" asp-action="Delete"
                       asp-route-id="@contacts.ContactsId"
                           asp-route-slug="@contacts.Slug" class="btn btn-primary mb-3">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
</div>